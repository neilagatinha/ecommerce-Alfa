@page
@model ecommerce_db.Pages.crud.AlterarModel
@{
}
<form method="post">

    <input type="hidden"asp-for="clientes.Id" />
    
    <div class="row">
        <div class="col-4">
            <label asp-for="clientes.Nome">Nome:</label>
            <input asp-for="clientes.Nome" class="form-control" />
            <span asp-validation-for="clientes.Nome" class="text-danger"></span>
        </div> 

        <div class="col-4">
            <label asp-for="clientes.Email">Email:</label>
            <input asp-for="clientes.Email" class="form-control" />
            <span asp-validation-for="clientes.Email" class="text-danger"></span>
        </div>
        <div class="row">
                <div class="col-2">
                    <label asp-for="clientes.Telefone">Telefone:</label>
                    <input asp-for="clientes.Telefone" class="form-control" />
                    <span asp-validation-for="clientes.Telefone" class="text-danger"></span>
                </div>
        </div>
      </div>
      <br/>
      <br/>

      <input class =" btn btn-outline-dark" type="submit" value="Enviar" />
</form>
