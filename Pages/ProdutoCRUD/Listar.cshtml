@page
@model ListarModel
@{
}
<h1> Lista de Produtos</h1>

<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Nome</td>
            <td>Descricao</td>
            <td>Categoria</td>
            <td>Unidade de Medida</td>
        </tr>
    </thead>
    <tbody>@foreach (ecommerce_db.Models.Produto Produtos in Model.Produtos){
        <tr>
            <td>@Produtos.Id</td>
            <td>@Produtos.nome</td>
            <td>@Produtos.descricao</td>
            <td>@Produtos.categoria</td>
            <td>@Produtos.unidadedeMedida</td>
            <td>

            </td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Opções
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a asp-page="./alterar"
					               asp-route-id="@Produtos.Id"
                                   class="dropdown-item">
                                    Editar
                               </a>
                               </li>
                            <li>
                                <form method="post"
                                      asp-page-handler="delete"
                                      asp-route-id="@Produtos.Id">
                                    <button class="dropdown-item">Excluir</button>
                                </form>
                            </li>
                            <li>
                                <a asp-page="./alterar"
                                   asp-route-id="@Produtos.Id"
                                   class="dropdown-item">
                                    Incluir
                                </a>
                            </li>
                        </ul>
                    </div>
                </td>
                
        </tr>
    }</tbody>
</table>

