@page
@model ecommerce_db.Pages.crud.ListarModel
@{
}
<table>
    <thead>
        <tr>
            <td>Id</td>
            <td>Nome</td>
            <td>Email</td>
            <td>Telefone</td>
        </tr>
    </thead>
    <tbody>
        @foreach (ecommerce_db.Models.Clientes cliente in Model.clientes) {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Name</td>
                <td>@cliente.email</td>
                <td>@cliente.telefone</td>
                <td>@cliente.endereco</td>
                <td>
                       <a>Editar</a>
                       <form
                           method="post"
                           asp-page-handler="delete"
                           asp-route-id="@cliente.Id"
                       > 
                           <button>Excluir</button>
                       </form>
                </td>
            </tr>
    }</tbody>
</table>